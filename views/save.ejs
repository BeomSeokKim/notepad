<% 
	layout('layout.ejs') 
-%>
    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron" style='padding: 10px; margin-bottom: 15px;'>

    </div>

<div class="container">
       
      <form class="form-horizontal" role="form" method="post">
      <div class="form-group">
        <label for="inputName1" class="col-lg-2 control-label">제목</label>
        <div class="col-lg-10">
          <input type="text" class="form-control" id="inputName1" name="title" placeholder="이름" value='<%=memoNo%>'>
        </div>
      </div>
      <div class="form-group">
        <label for="inputText1" class="col-lg-2 control-label">내용</label>
        <div class="col-lg-10">
        	<textarea id="inputText1" class="form-control" name="memo" rows="4" placeholder="메모 내용"></textarea>          
        </div>
      </div>  
      <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
          <button type="submit" class="btn btn-default">저장</button>
        </div>
      </div>
    </form>
    
</div>

